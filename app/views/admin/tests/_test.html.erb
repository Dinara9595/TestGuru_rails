<tr>
  <td class="align_middle">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>

    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>

  <td class="align_middle"><%= test_level(test) %></td>
  <td class="align_middle"><%= test.questions.count %></td>
  <td class="align_middle"><%= link_to 'Просмотр', admin_test_path(test) %></td>
  <td class="align_middle">
    <%= link_to 'Редактировать',
                edit_admin_test_path(test),
                data: { test_id: test.id },
                class: "form-inline-link"%>
  </td>
  <td class="align_middle"><%= link_to 'Удалить', admin_test_path(test), method: :delete, data: { confirm: "Вы уверены?"} %></td>
</tr>
