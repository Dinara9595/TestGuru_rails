<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer  %>

  <p>
    <%= form.label :body %>
    <%= form.text_area :body, id: :answer_body, size: "100x10" %>
  </p><br>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p><br>

  <p>
    <%= form.label :question_id %>:
    <%= form.collection_select :question_id, Question.all, :id, :body, prompt: true %>
  </p><br>

  <p><%= form.submit%>
<% end %>
