<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name, id: :name %>
  </p><br>

  <p>
    <%= form.label :file_name %>
    <%= form.select :file_name, Badge.file_names.keys.to_a %>
  </p><br>

  <p>
    <%= form.label :rule %>
    <%= form.select :rule, Badge.rules.keys.to_a  %>
  </p><br>

  <p>
    <%= form.label :rule_parameter %>
    <%= form.select :rule_parameter, Badge.rule_parameters.keys.to_a %>
  </p><br>

  <p><%= form.submit%>

<% end %>
